<% @page_title = "友達一覧" %>
<p><%= link_to "add", :new_friend, :class => "btn add" %></p>

<% if @friends.present? %>
<table class="attd">
  <% @friends.each do |friend| %>
    <tr>
      <td><%= Friend.where("id <= ?", friend.id).count %></td>
      <td><%= link_to friend.name, friend %></td>
      <td><%= link_to "edit", [:edit, friend], :class => "btn edit" %>
      <td><%= link_to "delete", friend, :class => "btn delete", method: :delete,
        data: { confirm: "本当に削除しますか？" } %></td>
    </tr>
  <% end %>
</table>
<%= will_paginate @friends %>
<% else %>
  <p>友達の情報がありません。</p>
<% end %>
